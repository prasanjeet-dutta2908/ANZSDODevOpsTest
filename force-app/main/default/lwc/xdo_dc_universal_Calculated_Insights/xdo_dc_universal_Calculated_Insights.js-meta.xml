<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Universal Calculated Insights</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property name="headerTitle" type="String" default="Calculated Insights"
                label="Enter Header Title " />
            <property name="titleIcon" type="String" label="SLDS Icon for Title"
                default="standard:calculated_insights" />
            <property name="title" type="String" default="Propensity to Churn "
                label="Enter Metric Title" />
            <property name="metric" type="String" default="12%"
                label="Enter  Metric Value" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>